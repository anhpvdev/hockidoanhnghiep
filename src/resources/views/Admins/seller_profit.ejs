   </select>
   <div class="month_spending"> </div>
   <script>
       const spen_month = document.getElementById("month_spending")
       const show_send = document.querySelector(".month_spending")
       spen_month.addEventListener('change',function(){
           if(this.value >0){
               $.ajax({
                   type: "post",
                   url: "/Seller/profit/month",
                   data: {
                       month:this.value
                   },
                   success: function(data) {   
                       if(data.success){
                         show_send.textContent = `Chi tiêu tháng ${this.value} là: ${data.data} vnd`
                       }else alert(data.data)
                   }
               })
           }else{
               show_send.textContent = ``
           }
         
       })
   </script>


   
