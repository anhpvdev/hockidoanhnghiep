                <%- include("./navbar") %>
              </aside>
              <!-- cart section -->
              <div class="main-column">
                <p class="cart__title ui text size-2xl">Giỏ Hàng</p>
                <table class="cart__table ui table size-xs" cellpadding="0" cellspacing="0">
                  <thead>
                    <tr>
                      <th width="58px">
                        <div class="flex-col-center-center cart__table-header-column">
                          <label class="ui checkbox">
                            <input class="ui checkbox square" type="checkbox" name="Select All" />
                            <div></div>
                          </label>
                        </div>
                      </th>
                      <th width="127px">
                        <button class="product-table__header-item--product ui button gray_50_02 size-md fill square">
                          Sản phẩm
                        </button>
                      </th>
                      <th width="223px">
                        <p class="product-table__header-item--name ui text size-md">Tên</p>
                     </th>
                      <th width="182px">
                        <p class="product-table__header-item--name ui text size-md">Loại/Size</p>
                      </th>
                      <th width="125px">
                        <p class="product-table__header-item--name ui text size-md">Số lượng</p>
                      </th>
                      <th width="133px">
                        <h1 class="product-table__header-item--price ui heading size-xs">GIÁ</h1>
                      </th>
                      <th width="61px">
                        <div class="action-column"></div>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < data.length; i++) { %>
                
                        <tr>
                            <td>
                              <div>
                                <label class="ui checkbox">
                                  <input class="ui checkbox red_a200 square" type="checkbox" name="checkbox_one" onchange="resetpoduct(this)" value="<%= data[i].cart_id %>"/>
                                  <div></div>
                                </label>
                              </div>
                            </td>
                            <td>
                              <div class="row">
                                <img alt="image" class="image_four"  src="../../../public/images/Products/<%= data[i].image %>"/>
                              </div>
                            </td>
                            <td>
                              <h2 class="product-table__description ui heading size-xs"><%= data[i].pname %></h2>
                            </td>
                            <td>
                              <p class="product-table__description ui text size-md"><%= data[i].Name %> - <%= data[i].cname %></p>
                            </td>
                            <td>
                              <input type="number" id="number-input" value="<%= data[i].num %>" min="1" max="100" step="1" class="textbox-57 ui button gray_100 size-md fill round">
                            </td>
                            <td>
                              <p class="product-table__description ui text size-md"><%= data[i].Prices * data[i].num%> ₫</p>
                            </td>
                            <td>
                              <div class="flex-col-center-center columnpen_one">
                                <img alt="pen" class="pen_one-1" src="../../../public/images/shop/icon_delete.png"/>
                              </div>
                            </td>
                          </tr>
                      <% } %> 
                  
                   
          
                  </tbody>
                </table>
             
                <form class="cart__summary" action="/pay/payment" method="post">
                  <h4 class="cart__summary-price ui heading size-md">
                    <input type="text" name="name" id="123" value="1" hidden="hidden">
                    <span class="cart__summary-price-span"> </span>
                    <span class="cart__summary-price-span-1"> </span>
                  </h4>
                  <a href="#">
                    <button type="submit" class="cart__summary-button ui button deep_orange_300 size-md fill round">Mua hàng</button>
                  </a>
                </form>


