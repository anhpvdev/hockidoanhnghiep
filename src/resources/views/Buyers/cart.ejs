            // console.log(node.parentElement)
            if(node.checked ==true){
                console.log("true")
                arr.push(node.value)
                console.log(arr)
            }else{
                console.log("false")
                arr = arr.filter(function(item) {return item !== node.value})
                console.log(arr)
            }
            document.getElementById("123").value = arr
        }
