  <body>
    <div class="buyerlichsumuahang">
        <div class="column_nine">
          <!-- header section -->
          <div class="columnheaderlog">
            <%- include("./header") %>
            <!-- sidebar section -->
            <div class="main-row">
              <!-- tab bar -->
              <aside class="container218">
